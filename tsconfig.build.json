{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./server",
        "incremental": true,
        "skipLibCheck": true
    },
    "exclude": ["view/**/*.ts", "view/**/*.tsx"]
}
